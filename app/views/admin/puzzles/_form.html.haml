#form
  %p(class = "title")
    = f.label :name
    %br
    = f.text_field :name
  
  %p
    = f.label :short_description
    %br
    = f.text_field :short_description
  
  %p
    = f.label :description
    %br
    = f.text_area :description

  - unless @puzzle.fingerprint.blank?
    %p
      %label Fingerprint
      %br
      = @puzzle.fingerprint
    
  %p
    = f.label :file, "Solution File"
    %br
    = f.file_field :file
  
  %p
    = f.submit
    = link_to "Cancel", admin_puzzles_path