#content
  #page_id
    - if signed_in?
      - if current_user.name
        = "Welcome, #{current_user.name}!"
      - else 
        Welcome to Puzzlenode!
      = link_to "Go to my Puzzles", puzzles_path
    - else
      Log in or sign up to view puzzles.
      = link_to "Sign In", login_path
  #two_col
    .main
      .article_list
        %h2 Announcements
        - @announcements.each do |announcement|
          #article
            .article_header
              .article_title
                %h3= announcement.title 
              .article_time= announcement.created_at.strftime("Posted %A, %B %d at %H:%M %Z")
            .article_body= announcement.body
    .sidebar
      .widget
        %h3 What is Puzzlenode?
        .video_content
          :plain 
            <iframe title="YouTube video player" width="300" height="199" src="http://www.youtube.com/embed/_cnaed9Twz8" frameborder="0" allowfullscreen></iframe>
        %p
          Sidebar stuff
      .widget
        %h3 Find out more!
        %p 
          More sidebar stuff...
        %p 
          Yet more sidebar stuff goes here